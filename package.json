{
	"name": "cucumberquick",
	"displayName": "Cucumber Quick",
	"description": "Cucumber Quick - a quick cucumber executer",
	"version": "1.0.3",
	"publisher": "AbhinabaGhosh",
	"engines": {
		"vscode": "^1.44.0"
	},
	  "homepage": "https://github.com/abhinaba-ghosh/cucumber-quick",
    "repository": {
        "type": "git",
        "url": "https://github.com/abhinaba-ghosh/cucumber-quick/"
    },
    "bugs": {
        "url": "https://github.com/abhinaba-ghosh/cucumber-quick/issues"
    },
	"categories": [
		"Programming Languages"
	],
	"author": "Abhinaba Ghosh",
	"icon": "media/icon.png",
	"activationEvents": [
		"onCommand:execute.scenario",
		"onCommand:execute.feature"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "execute.scenario",
				"title": "Run Scenario"
			},
			{
				"command": "execute.feature",
				"title": "Run Feature"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "execute.scenario"
				},
				{
					"command": "execute.feature"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}